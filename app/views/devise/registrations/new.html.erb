<div class='row'>
  <div class='col-md-3'>
    <div class='content'>
      <h2>Sign up</h2>
      <p>Already have an account?</p>
      <%= link_to "Sign In", new_user_session_path %>
    </div>
  </div>
  <div class='col-md-9'>
    <div class='content'>
      <div class='well'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form', class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

        <div class='form-group'>
          <%= f.label :profile_name, class: 'col-md-4 control-label' %>
          <%= f.text_field :profile_name, class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :email, class: 'col-md-4 control-label' %>
          <%= f.email_field :email, autofocus: true, class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password, class: 'col-md-4 control-label' %> 
          <%= f.password_field :password, autocomplete: "off", class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password_confirmation, class: 'col-md-4 control-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
          <div class='col-md-4'></div>
          <div><%= f.submit "Sign up", class: 'btn btn-default' %></div>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>