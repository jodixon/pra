<div class='row content-wrapper'>
  <div class='col-md-3'>
    <div class='content'>
      <h2>Login</h2>
    </div>
  </div>
  <div class='col-md-9'>
    <div class='content'>
      <div class='well'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form', class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>
      
        <div class='form-group'>
          <%= f.label :email, class: 'col-md-4 control-label' %>
          <%= f.text_field :email, class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password, class: 'col-md-4 control-label' %> 
          <%= f.password_field :password, autocomplete: "off", class: 'col-md-8 form-control' %>
        </div>

        <div class='form-group'>
        	<div class='col-md-4'></div>
	        <% if devise_mapping.rememberable? -%>
	    		<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  		<% end -%>
  		</div>

        <div class='form-group'>
          <div class='col-md-4'></div>
          <div><%= f.submit "Submit", class: 'btn btn-default' %></div>
        </div>

      <% end %>
    </div>
  </div>
  </div>
</div>
